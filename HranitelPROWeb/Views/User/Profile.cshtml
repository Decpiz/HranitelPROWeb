@using HranitelPROWeb.Models.User
@model ProfileViewModel

<link href="/css/btnRel.css" rel="stylesheet" />

<div class="text-center">
    <img src="~/images/iconProfile.png" style="max-width: 180px"/>
    <h3 style="margin-top: 5px">@Model.CurrentUser.Familia</h3>
    <h3 style="margin-top: -10px">@Model.CurrentUser.Imya</h3>
    <h3 style="margin-top: -10px">@Model.CurrentUser.Otchestvo</h3>
    <a asp-controller="User" asp-action="EditProfile" class="button-46" style="margin-top: 18px">Редактировать</a>
    <a asp-controller="Auth" asp-action="NewPassword" class="button-46" style="margin-top: 12px">Сменить пароль</a>
    <a asp-controller="Auth" asp-action="Logout" class="button-46" style="margin: 12px 0px 80px 0px">Выйти</a>
</div>
